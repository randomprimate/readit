{
  "name": "Readit",
  "version": "1.1.0",
  "description": "Master Electron Course Project",
  "main": "main.js",
  "author": "Jose Torres",
  "homepage": "https://github.com/randomprimate/bookmarks-electron#readme",
  "scripts": {
    "start": "electron .",
    "mac": "electron-build -m",
    "win": "electron-builder -w",
    "lin": "electron-builder -l",
    "build": "electron-builder -mwl",
    "make-cert": "electron-builder create-self-signed-cert -p balameb",
    "publish": "electron-builder build -mwl -p onTagOrDraft"
  },
  "build": {
    "appId": "com.balameb.readit",
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.productivity",
      "target": "tar.gz"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Network",
      "target": "AppImage"
    },
    "win": {
      "publish": [
        "github"
      ],
      "publisherName": "balameb"
    }
  },
  "dependencies": {
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.8",
    "jquery": "^3.3.1",
    "query-string": "^6.0.0"
  },
  "devDependencies": {
    "electron-builder": "^20.10.0"
  }
}
